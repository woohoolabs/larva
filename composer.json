{
    "name": "woohoolabs/larva",
    "description": "Woohoo Labs. Larva Database Abstraction",
    "type": "library",
    "keywords": ["Woohoo Labs.", "Larva", "Database Abstraction", "Query Builder"],
    "license": "MIT",
    "authors": [
        {
            "name": "Máté Kocsis",
            "email": "kocsismate@woohoolabs.com"
        }
    ],
    "support": {
        "issues": "https://github.com/woohoolabs/larva/issues",
        "source": "https://github.com/woohoolabs/larva"
    },
    "require": {
        "php": "^7.4.0||^8.0.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.0",
        "phpstan/phpstan-phpunit": "^0.12.0",
        "phpstan/phpstan-strict-rules": "^0.12.0",
        "phpunit/phpunit": "^8.4.0||^9.0.0",
        "squizlabs/php_codesniffer": "^3.5.0",
        "woohoolabs/coding-standard": "^2.2.0",
        "woohoolabs/releaser": "^1.2.0"
    },
    "autoload": {
        "psr-4": {
            "WoohooLabs\\Larva\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WoohooLabs\\Larva\\Examples\\": "examples/",
            "WoohooLabs\\Larva\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse --level 8 src tests",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf"
    },
    "config": {
        "sort-packages": true
    }
}
