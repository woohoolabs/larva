{
    "name": "woohoolabs/larva",
    "description": "Woohoo Labs. Larva Database Abstraction",
    "type": "library",
    "keywords": ["Woohoo Labs.", "Larva", "Database Abstraction", "Query Builder"],
    "license": "MIT",
    "authors": [
        {
            "name": "Máté Kocsis",
            "email": "kocsismate@woohoolabs.com"
        }
    ],
    "support": {
        "issues": "https://github.com/woohoolabs/larva/issues",
        "source": "https://github.com/woohoolabs/larva"
    },
    "require": {
        "php": "^7.4.0",
    },
    "require-dev": {
        "phpstan/phpstan": "^0.10.8",
        "phpstan/phpstan-strict-rules": "^0.10.1",
        "phpunit/phpunit": "^7.0.0",
        "squizlabs/php_codesniffer": "^3.4.0",
        "woohoolabs/coding-standard": "^1.0.0",
        "woohoolabs/releaser": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "WoohooLabs\\Larva\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WoohooLabs\\Larva\\Examples\\": "examples/",
            "WoohooLabs\\Larva\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse --level 7 src",
        "phpcs": "phpcs"
    },
    "config": {
        "sort-packages": true
    }
}
